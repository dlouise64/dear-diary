.container.content
  .form
    = form_for @post do |f|
      .form-group
        %label= f.label :title
        = f.text_field :title, class: 'form-control'
      .form-group
        %label= f.label :body
        = f.cktext_area :body, class: 'form-control'
      = f.hidden_field :user_id, value: current_user.id
      %p
        %span= f.submit class: 'btn btn-default'
        %span= link_to "Back", posts_path, class: 'btn btn-default'