.masthead
  %nav.navbar.navbar-inverse
    .container
      .pull-right
        - if user_signed_in?
          %span= link_to "Posts", posts_path
          %span= link_to "Settings", edit_blog_setting_path(@blog_setting)
          %span &nbsp &nbsp | &nbsp
          %span= "Welcome, #{current_user.first_name}"
          %span= link_to 'Sign out', destroy_user_session_path, method: :delete
        - else
          %span= link_to "Sign In", new_user_session_path
  .container.content
    %h1= @blog_setting.blog_name